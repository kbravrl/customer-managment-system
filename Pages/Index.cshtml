@page
@model customer.Pages.Index
@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center mb-3">List of Customers </h1>

<a class="btn btn-primary mb-3" href="/Customers/Create">New Customer</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model.CustomerList) {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Firstname @customer.Lastname</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Company</td>
                <td>@customer.CraetedAt</td>
                <td style="white-space: nowrap;">
                    <a class="btn btn-primary btn-sm"a href="Customers/Edit?id=@customer.Id">Edit</a>
                    <a class="btn btn-danger btn-sm"a href="Customers/Delete?id=@customer.Id">Delete</a>
                </td>
      
            </tr>

         
        }
    </tbody>
</table>